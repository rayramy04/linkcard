{
  "name": "linkcard",
  "version": "1.0.0",
  "description": "A simple and fast link aggregation page with i18n support",
  "main": "src/js/main.js",
  "scripts": {
    "dev": "live-server src --port=8080",
    "build": "npm run clean && npm run build:all && npm run test:lighthouse",
    "clean": "rm -rf dist",
    "build:all": "npm run build:html && npm run build:css && npm run build:js && npm run build:images && npm run build:copy",
    "build:html": "html-minifier src/index.html --collapse-whitespace --remove-comments --minify-css --minify-js -o dist/index.html",
    "build:css": "postcss src/styles.css -o dist/styles.css",
    "build:js": "mkdir -p dist/js && terser src/js/main.js -c -m -o dist/js/main.js && terser src/js/i18n.js -c -m -o dist/js/i18n.js && terser src/config.js -c -m -o dist/config.js",
    "build:images": "node scripts/optimize-images.js",
    "build:copy": "cp -r src/assets dist/assets 2>/dev/null || true",
    "generate:sitemap": "node scripts/generate-sitemap.js",
    "generate:robots": "node scripts/generate-robots.js",
    "test:lighthouse": "lighthouse http://localhost:8080 --output html --output-path ./lighthouse-report.html --quiet || true",
    "test:a11y": "pa11y http://localhost:8080 || true",
    "deploy": "npm run build && gh-pages -d dist",
    "serve:dist": "live-server dist --port=8080"
  },
  "keywords": [
    "linkpage",
    "profile",
    "social-links",
    "i18n",
    "static-site"
  ],
  "author": "Ray",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^10.4.16",
    "cssnano": "^6.0.1",
    "gh-pages": "^6.1.0",
    "html-minifier": "^4.0.0",
    "live-server": "^1.2.2",
    "pa11y": "^6.2.3",
    "postcss": "^8.4.32",
    "postcss-cli": "^11.0.0",
    "sharp": "^0.33.1",
    "terser": "^5.26.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rayramy04/linkcard.git"
  },
  "bugs": {
    "url": "https://github.com/rayramy04/linkcard/issues"
  },
  "homepage": "https://rayramy04.github.io/linkcard/"
}